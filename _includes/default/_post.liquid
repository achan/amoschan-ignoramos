<div class="container post {{ post.slug }}">
  <div class="row post-header">
    <div class="col-sm-12 col-md-8 col-md-offset-2">
      <h2 class="post-title">
        <a class="permalink" href="{{post.permalink}}">{{post.title}}</a>
      </h2>
      <div class="metadata">
        <date>{{ post.timestamp }}</date> Â·
        <i class="fa fa-tag"></i>
        {% for tag in post.tags %}
          <a class="tag" href="/tags/{{ tag }}">#{{ tag }}</a>
        {% endfor %}
        <a href="{{ post.permalink }}"><i class="fa fa-bookmark"></i></a>
      </div>
    </div>
  </div>
  <div class="row content">
    <div class="col-sm-12 col-md-8 col-md-offset-2">
      {{post.html}}
    </div>
  </div>
  <div class="post-footer">
    <i class="fa fa-certificate icon-2x"></i>
  </div>
</div>
